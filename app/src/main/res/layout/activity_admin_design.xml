<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminDesign">

    <ImageView
        android:paddingLeft="20dp"
        android:paddingRight="25dp"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:src="@drawable/vignanlogohighres"
        android:layout_marginTop="50sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FCF2FA"
            app:cardCornerRadius="20dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/francis1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free class rooms"
                android:textAllCaps="true"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="bottom"
                android:layout_marginStart="80dp"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FCF2FA"
            app:cardCornerRadius="20dp" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:src="@drawable/francis2withbg"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free Faculty"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="110dp"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FCF2FA"
            app:cardCornerRadius="20dp" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:src="@drawable/dealingsub"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="subject faculty dealing"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="50dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FCF2FA"
            app:cardCornerRadius="20dp" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/facultywokload"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FacultyWorkload"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="90dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FCF2FA"
            app:cardCornerRadius="20dp" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:src="@drawable/uploadexcelimg"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="upload excel"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="125dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FCF2FA"
            app:cardCornerRadius="20dp" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:src="@drawable/csestafflist"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload cse staff list"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="70dp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </ScrollView>

</LinearLayout>